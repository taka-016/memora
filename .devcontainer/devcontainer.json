{
    "name": "memora",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "TZ": "${localEnv:TZ:Asia/Tokyo}",
            "CLAUDE_CODE_VERSION": "latest",
            "CODEX_VERSION": "latest"
        }
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "mounts": [
        "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
        "source=claude-global-memora,target=/root/.claude,type=volume",
        "source=codex-global-memora,target=/root/.codex,type=volume",
        "source=android-config-memora,target=/root/.android,type=volume",
        "source=android-sdk-memora,target=/opt/android-sdk-linux,type=volume",
        "source=gradle-memora,target=/root/.gradle,type=volume",
        "source=bashhistory-memora,target=/commandhistory,type=volume"
    ],
    "runArgs": [
        "--env-file",
        ".devcontainer/.env"
    ],
    "forwardPorts": [
        8080
    ],
    "portsAttributes": {
        "8080": {
            "label": "code-server",
            "onAutoForward": "openBrowser"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1.0": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "bierner.markdown-mermaid",
                "anthropic.claude-code",
                "DavidAnson.vscode-markdownlint",
                "donjayamanne.githistory",
                "eamodio.gitlens",
                "yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-containers",
                "openai.chatgpt",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "dart.showInspectorNotificationsForWidgetErrors": false,
                "dart.previewFlutterUiGuides": true,
                "dart.previewFlutterUiGuidesCustomTracking": true,
                "files.associations": {
                    "*.dart": "dart"
                }
            }
        }
    },
    "initializeCommand": "bash .devcontainer/initialize.sh",
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "postStartCommand": "bash .devcontainer/start.sh"
}
